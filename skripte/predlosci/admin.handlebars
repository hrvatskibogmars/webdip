                      <div class='col-md-12'>

                            <div class='panel-group' >

                            
                              <div class='panel panel-default' id='accordion' data-ng-controller='region_controller'>

                                <div class='modal fade' id='edit_moderators' tabindex=''-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
                                  <div class='modal-dialog' >
                                    <div class='modal-content'>
                                      <div class='modal-header'>
                                        <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
                                        <h4 class='modal-title'>Dodaj moderatore</h4>
                                      </div>
                                      <div class='modal-body'>
                                        <span data-ng-repeat='user in user_list'>
                                          <label class='checkbox' for='{{user.id}}'>
                                            <input type='checkbox' name='group' value='' id='{{ user.id }}' ng-model='selection.ids[user.id]'>  &#123;&#123 user.name  &#125;&#125  &#123;&#123 user.surname &#125;&#125
                                          </label>
                                        </span>
                                      </div>
                                      <div class='modal-footer'>
                                        <button type='button' class='btn btn-default' data-dismiss='modal'>Zatvori</button>
                                        <button type='button' class='btn btn-primary' data-ng-click='save_moderators()'>Spremi</button>
                                      </div>
                                    </div><!-- /.modal-content -->
                                  </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->

                                <div class='panel-heading'>
                                  <h1 class='panel-title'>
                                    <a data-toggle='collapse' data-parent='#accordion' href='#collapseOne'>
                                      Regije
                                    </a>
                                  </h1>
                                </div>
                                <div id='collapseOne' class='panel-collapse collapse in'>
                                  <div class='panel-body'>
                                     <div class='row'>
                                      <div class='col-md-8'>
                                      </div>
                                      <div class='col-md-4'>
                                        <form class='form-inline' role='form'>
                                          <div class='form-group'>
                                            <input class='form-control' type='text' placeholder='Naziv nove regije' name='region' value='' data-ng-model='region_name'>
                                          </div>
                                          <div class='form-group'>
                                            <button class='btn btn-info' name='add_region_btn' data-ng-click='save_region()'>Dodaj</button>
                                          </div>
                                        </form>
                                      </div>
                                    </div>
                                    <hr>
                                    <br>
                                    <div class='row'>
                                      <div class='col-md-12 center-block'>

                                        <ul class='list-inline'>
                                          <li data-ng-repeat='region in region_list' class='col-md-12'>
                                            <div  class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
                                              <div class='offer offer-default'>
                                                <div class='shape'>
                                                  <div class='shape-text'>
                                                    Regija
                                                  </div>
                                                </div>
                                                <div class='offer-content'>
                                                  <h3 class='lead'>
                                                    &#123;&#123; region.name &#125;&#125;
                                                  </h3>
                                                  <p>
                                                    <button class='btn btn-default btn-sm' data-ng-click='edit_moderators(region.id)'>Uredi moderatore</button>
                                                    &nbsp; &nbsp;
                                                    <button class='btn btn-default btn-sm' data-ng-click='delete_region(region.id)'>Izbrisi regiju</button>
                                                  </p>
                                                </div>
                                              </div>
                                            </div>
                                          </li>
                                        </ul>
                                      </div>
                                    </div>
                                  </div>


                                  </div>
