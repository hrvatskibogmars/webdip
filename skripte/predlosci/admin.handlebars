                                      <div class='col-md-4'>
                                        
                                        <button class='btn btn-danger btn-sm pull-right' data-ng-click='decline_artefact()'>Odbij</button>
                                      </div>
                                    </div>
                                    <hr>
                                    <div class='gridStyle' ng-grid='gridOptions'></div>
                                  </div>
                                </div>
                              </div>
                              

